<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#BA2323"
    android:weightSum="8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEM VINDO,"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/couture_bld"
        android:textSize="14sp"
        android:textColor="#fff"
        android:textStyle="normal"
        />
    <TextView
        android:id="@+id/nomeuser"
        android:text="nomeuser"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/couture_bld"
        android:textSize="14sp"
        android:textStyle="normal">
    </TextView>
</LinearLayout>
    <GridLayout
        android:id="@+id/maingrid"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_weight="5"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:rowCount="4">

    <!--row 1-->

    <!--column 1-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:background="@drawable/backgroun_empresas">
            <ImageView
                android:id="@+id/bebidas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/bottle"
                >
            </ImageView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/bebidas"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="DEPÓSITO"
                android:textColor="@color/negra"
                android:layout_marginBottom="-22dp"
                android:fontFamily="@font/couture_bld"
                android:textSize="14sp"
                >
            </TextView>
        </RelativeLayout>


        <!--column 2-->

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="180dp"
            android:orientation="vertical"
            android:background="@drawable/backgroun_empresas">
            <ImageView
                android:id="@+id/restaurante"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/rest" />
            <TextView
                android:layout_width="140dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/restaurante"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="RESTAURANTE"
                android:textColor="@color/negra"
                android:layout_marginBottom="-22dp"
                android:fontFamily="@font/couture_bld"
                android:textSize="14sp"
                >
            </TextView>
        </RelativeLayout>


        <!--row 2-->

        <!--column 1-->


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:background="@drawable/backgroun_empresas">

            <ImageView
                android:id="@+id/agua"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/agas" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/agua"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="ÁGUA E GÁS"
                android:textColor="@color/negra"
                android:layout_marginBottom="-22dp"
                android:fontFamily="@font/couture_bld"
                android:textSize="14sp"
                >
            </TextView>

        </RelativeLayout>


        <!--column 2-->


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="180dp"
            android:orientation="vertical"
            android:background="@drawable/backgroun_empresas">

            <ImageView
                android:id="@+id/lanchonete"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/lanc" />
            <TextView
                android:layout_width="110dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/lanchonete"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="LANCHONETE"
                android:textColor="@color/negra"
                android:layout_marginBottom="-22dp"
                android:fontFamily="@font/couture_bld"
                android:textSize="14sp"
                >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
    </GridLayout>
    </RelativeLayout>
</RelativeLayout>