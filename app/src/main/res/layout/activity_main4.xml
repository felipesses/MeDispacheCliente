<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/iconecelular"
    android:weightSum="8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nomeuser"
            android:text="nomeuser"
            android:textColor="#fff"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/xilosa_"
            android:textSize="15sp">
        </TextView>



    <GridLayout
        android:id="@+id/maingrid"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_weight="5"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:rowCount="4">

    <!--row 1-->

    <!--column 1-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/bebidas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dep">
            </ImageView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/bebidas"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="DEPÓSITOS"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginBottom="-20dp"
                android:fontFamily="@font/xilosa_"
                android:textSize="20sp"
                >
            </TextView>
        </RelativeLayout>


        <!--column 2-->

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="180dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/restaurante"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/rest" />
            <TextView
                android:layout_width="140dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/restaurante"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="RESTAURANTE"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginBottom="-20dp"
                android:fontFamily="@font/xilosa_"
                android:textSize="20sp"
                >
            </TextView>
        </RelativeLayout>


        <!--row 2-->

        <!--column 1-->


        <RelativeLayout

            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/agua"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/agas" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/agua"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="ÁGUA E GÁS"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginBottom="-20dp"
                android:fontFamily="@font/xilosa_"
                android:textSize="20sp"
                ></TextView>

        </RelativeLayout>


        <!--column 2-->


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="180dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lanchonete"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/lanc" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/lanchonete"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="LANCHONETE"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginBottom="-20dp"
                android:fontFamily="@font/xilosa_"
                android:textSize="20sp"
                >
            </TextView>
        </RelativeLayout>

    </RelativeLayout>
    </GridLayout>
    </RelativeLayout>

