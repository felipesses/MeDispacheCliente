<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@color/negra"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="560dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detalhes do Pedido"
                        android:textColor="@color/bae"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!--<de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_launcher_background" /-->

                    <!--   <TextView
                           android:id="@+id/username"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/profile_image"
                           android:layout_centerHorizontal="true"
                           android:layout_marginTop="15dp"
                           android:text="username"
                           android:textColor="@color/bae"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/attuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:padding="5dp"
                android:visibility="gone">


                <ImageButton
                    android:id="@+id/botaoatt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/send" />

                <ImageButton
                    android:id="@+id/botaocancela"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/deletar" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@color/white">

                <ScrollView
                    android:layout_width="366dp"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="2dp"></android.support.v7.widget.RecyclerView>
                </ScrollView>
                <!--aqui é a lista dos pedidos-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="180dp"
                android:background="@color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="AQUI RECEBE AS DESGRAÇA DAS INFORMACOES EXTRAS DO PEDIDO" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="270dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/formadepagamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Forma de pagamento: "
                    android:textColor="@color/negra"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <RadioButton
                    android:id="@+id/R_dinheiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/formadepagamento"
                    android:text="Dinheiro" />

                <RadioButton
                    android:id="@+id/R_cartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/R_dinheiro"
                    android:text="Cartão" />

                <TextView
                    android:id="@+id/preco_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Valor Total: "
                    android:textColor="@color/negra"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/opreco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/preco_total"
                    android:layout_toRightOf="@id/preco_total"
                    android:text="aqui o valor" />

                <TextView
                    android:id="@+id/troco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="55dp"
                    android:text="Troco para: "
                    android:textColor="@color/negra"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/troco"
                    android:layout_toRightOf="@id/troco"
                    android:hint="Digite o Valor" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="400dp">

                <Button
                    android:id="@+id/mensagem"
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/bae"
                    android:text="Endereço atual"
                    android:textColor="@color/yellow"
                    android:textColorLink="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="380dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>