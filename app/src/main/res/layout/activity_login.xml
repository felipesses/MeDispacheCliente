<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login"
    android:background="#B22222"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/resetarsenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Esqueci minha senha"
            android:textColor="@color/white"
            android:fontFamily="@font/couture_bld"
            android:textSize="12sp"/>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/splashf"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_login"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_below="@id/loginadress"
            android:layout_marginTop="7dp"
            android:layout_marginRight="-1dp"
            android:layout_toLeftOf="@id/loginpass"
            android:src="@drawable/ic_lock_outline_black_24dp" />

        <EditText
            android:id="@+id/loginpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginadress"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_below="@id/logo_login"
            android:layout_marginTop="83dp"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/loginadress"
            android:src="@drawable/ic_mail_outline_black_24dp" />

        <EditText
            android:id="@+id/loginadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo_login"
            android:layout_marginTop="75dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"
            />
        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/loginpass"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/Loginbotao"
                android:src="@drawable/botao_entrar"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/novocad"
                android:src="@drawable/botcad"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>