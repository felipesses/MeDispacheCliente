<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:gravity="center"
        android:background="@drawable/backgroun_empresas"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profile_image"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:text="username"
            android:textSize="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/negra"
            android:textStyle="bold"
            android:fontFamily="@font/xilosa_"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_on"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_alignEnd="@+id/profile_image"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#05df29"
            app:civ_border_width="10dp"
            android:layout_alignRight="@+id/profile_image" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_off"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_alignEnd="@+id/profile_image"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#bfbfbf"
            app:civ_border_width="10dp"
            android:layout_alignRight="@+id/profile_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginTop="-5dp"
            android:padding="1dp"
            android:id="@+id/last_msg"
            android:textColor="@color/negra"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/Mensagem"
            android:layout_width="36.75dp"
            android:layout_height="36.75dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/last_msg"
            android:background="@drawable/message"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_below="@id/last_msg"
            android:layout_toRightOf="@id/profile_image"

            >
            <TextView
                android:id="@+id/tempoE"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo de Entrega"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/ValorE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempoE"
                android:text="Valor da Entrega"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/aberto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ValorE"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:text="Estabelecimento Aberto/Fechado"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>