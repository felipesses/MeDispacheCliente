<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.usercadastro"
    android:background=" #B26921"
    >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="550dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="27dp">

        <Spinner
            android:id="@+id/cidade"
            android:layout_centerHorizontal="true"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="255dp"
            android:padding="2dp"
            android:background="@drawable/background_spinner"
            >
        </Spinner>

        <EditText
            android:id="@+id/houseAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cidade"
            android:ems="10"
            android:hint="RUA, BAIRRO E NÚMERO"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"/>

        <EditText
            android:id="@+id/userpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useradress"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"/>

        <EditText
            android:id="@+id/useradress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="127dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:lineSpacingExtra="10sp"
            android:text="CADASTRO DE USUÁRIO"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/couture_bld"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/cad_voltar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/houseAdress"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_back"
            android:layout_alignRight="@+id/houseAdress"
            />

        <ImageView
            android:id="@+id/cad_cadastro"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/houseAdress"
            android:background="@drawable/botcad"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/houseAdress"
            />

    </RelativeLayout>


</RelativeLayout>